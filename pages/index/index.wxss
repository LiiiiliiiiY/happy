page {
	display: flex;
	flex-direction: column;
	height: 100%;
	font-size: 28rpx;
	background: #EB0000;
}
.index-container {
	position: relative;
	width: 100%;
	height: 100%;
	box-sizing: border-box;
}
.banner {
	position: relative;
}
.banner .banner-img {
	width: 100%;
}
.banner .check {
	position: absolute;
	left: 50%;
	bottom: 55rpx;
	transform: translateX(-50%);
}
.banner .check image {
	width: 237rpx;
}
.middle {
	width: 100%;
}
.list {
	width: 100%;
	padding: 0 20rpx;
	box-sizing: border-box;
}
.list-item {
	border-radius: 30rpx;
	background-color: #FFFFFF;
	margin-bottom: 27rpx;
}
.list-item:last-child {
	margin-bottom: 17rpx;
}
.list-item .title {
	display: flex;
	align-items: center;
	position: relative;
	height: 83rpx;
	padding: 0 30rpx;
	font-size: 30rpx;
	font-weight: bold;
	color: #000000;
}
.list-item .title image {
	position: absolute;
	left: 0;
	top: 0;
	z-index: 0;
	width: 100%;
	height: 100%;
}
.list-item .title view {
	position: relative;
	z-index: 1;
}
.list-item .title text {
	color: #FF0000;
}
.list-item .content {
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 30rpx 20rpx;
	box-sizing: border-box;
}
.list-item .content .left {
	position: relative;
}
.list-item .content .left-img {
	width: 207rpx;
	height: 211rpx;
}
.list-item .content .sign {
	position: absolute;
	left: 0;
	top: 0;
	z-index: 10;
}
.list-item .content .sign image {
	width: 173rpx;
	display: block;
}
.list-item .content .sign text {
	position: absolute;
	left: 5rpx;
	top: 50%;
	transform: translateY(-50%);
	font-size: 20rpx;
	font-weight: bold;
	color: #FF0000;
}
.list-item .right {
	width: 440rpx;
}
.right-title {
	overflow: hidden;
	margin-bottom: 20rpx;
	text-overflow:ellipsis;
	white-space: nowrap;
	font-size: 28rpx;
	font-weight: bold;
	color: #3F3F3F;
}
.right-sale {
	display: inline-block;
	margin-bottom: 60rpx;
	padding: 10rpx 13rpx;
	border-radius: 22rpx;
	font-size: 22rpx;
	color: #FFFFFF;
	background-color: #FF0000;
}
.get {
	display: flex;
	align-items: flex-end;
	justify-content: space-between;
}
.get .price {
	font-size: 28rpx;
	font-weight: bold;
	color: #FF1A36;
}
.get .get-btn {
	display: flex;
	align-items: center;
	justify-content: center;
}
.get .get-btn .get-b {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 150rpx;
	height: 46rpx;
	border: 1rpx solid #ec1314;
	border-radius: 10rpx;
	box-sizing: border-box;
	font-size: 30rpx;
	font-weight: bold;
	color: #FF1A36;
}
.get .get-btn .get-o {
	margin-left: 10rpx;
	color: #ffffff;
	background-color: #ec1314;
}
.more {
	text-align: center;
}
.more image {
	width: 305rpx;
}
.ad {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 100;
	background-color: rgba(0, 0, 0, 0.75);
}
.ad-container {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}
.get-infor {
	width: 750rpx!important;
	padding: 0;
	margin: 0;
	background-color: rgba(0,0,0,0);
}
.ad-container .ad-img {
	width: 750rpx;
}
.ad-container .close {
	position: absolute;
	left: 50%;
	bottom: -90rpx;
	width: 110rpx;
	transform: translateX(-50%);
}