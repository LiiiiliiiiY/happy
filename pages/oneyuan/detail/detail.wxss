.banner{
    width: 100%;
    display:block;
}
.info{
    width: 100%;
    height: 120rpx;
    position: relative;
    padding: 18rpx 26rpx 22rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}
.info image{
    width: 100%;
    height: 120rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.info view{
    display: flex;
    flex-direction: column;
    z-index: 1;
    color: #fff;
}
.info view text{
    display: block;
}
.info view:nth-child(3){
    align-items: center;
}
.info view:nth-child(2) text:nth-child(1){
    font-size:32rpx;
    font-weight:bold;
    margin-bottom: 10rpx;
}
.info view:nth-child(2) text:nth-child(2){
    font-size:24rpx;
}
.info view:nth-child(3) text:nth-child(1){
    font-size:24rpx;
    margin-bottom: 10rpx;
}
.info view:nth-child(3) text:nth-child(2){
    font-size:32rpx;
    font-weight:bold;
}
.progressBox{
    padding: 37rpx 32rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}
.progressBox .title{
    font-size:24rpx;
    color:rgba(51,51,51,1);
    margin-bottom: 25rpx;
}
.duobaoing{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.duobaoing text:nth-child(1){
    font-size:36rpx;
    color:rgba(245,16,11,1);
    font-weight: bold;
}
.duobaoing text:nth-child(2){
    font-size:24rpx;
    color:rgba(102,102,102,1);
}
progress{
    width: 100%;
    margin: 35rpx 0 20rpx;
}
.gong{
    font-size:24rpx;
color:rgba(153,153,153,1);
}
.shangqi{
    width: 100%;
    height: 117rpx;
    position: relative;
}
.shangqi image{
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.shangqi text{
    position: absolute;
    top: 35rpx;
    left: 160rpx;
    z-index: 1;
    font-size:28rpx;
    color:rgba(51,51,51,1);
}