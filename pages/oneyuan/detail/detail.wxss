.banner{
    width: 100%;
    display:block;
}
.info{
    width: 100%;
    height: 120rpx;
    position: relative;
    padding: 18rpx 26rpx 22rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}
.info image{
    width: 100%;
    height: 120rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.info view{
    display: flex;
    flex-direction: column;
    z-index: 1;
    color: #fff;
}
.info view text{
    display: block;
}
.info view:nth-child(3){
    align-items: center;
}
.info view:nth-child(2) text:nth-child(1){
    font-size:32rpx;
    font-weight:bold;
    margin-bottom: 10rpx;
}
.info view:nth-child(2) text:nth-child(2){
    font-size:24rpx;
}
.info view:nth-child(3) text:nth-child(1){
    font-size:24rpx;
    margin-bottom: 10rpx;
}
.info view:nth-child(3) text:nth-child(2){
    font-size:32rpx;
    font-weight:bold;
}
.progressBox{
    padding: 37rpx 32rpx 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
}
.progressBox .title{
    font-size:24rpx;
    color:rgba(51,51,51,1);
    margin-bottom: 25rpx;
}
.duobaoing{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.duobaoing text:nth-child(1){
    font-size:36rpx;
    color:rgba(245,16,11,1);
    font-weight: bold;
}
.duobaoing text:nth-child(2){
    font-size:24rpx;
    color:rgba(102,102,102,1);
}
progress{
    width: 100%;
    margin: 35rpx 0 20rpx;
}
.gong{
    font-size:24rpx;
color:rgba(153,153,153,1);
}
.shangqi{
    width: 100%;
    height: 117rpx;
    position: relative;
}
.shangqi image{
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}
.shangqi text{
    position: absolute;
    top: 35rpx;
    left: 160rpx;
    z-index: 1;
    font-size:28rpx;
    color:rgba(51,51,51,1);
}
.list{
    width: 100%;
    padding: 30rpx 30rpx 100rpx;
    box-sizing: border-box;
}
.list .title{
    position: relative;
    font-size:36rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
    padding-left: 32rpx;
}
.list .title::after{
    position: absolute;
    left: 5rpx;
    top: 12rpx;
    content: '';
    width:9rpx;
    height:29rpx;
    background:rgba(245,16,11,1);
    border-radius:0px 5rpx 5rpx 0px;
    margin-bottom: 10rpx;
}
.content{
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
    border-bottom: 1px solid #dedede;
    box-sizing: border-box;
}
.content .left{
    display: flex;
    flex-direction: column;
}
.content .left text:nth-child(1){
    font-size:28rpx;
    font-weight:bold;
    color:rgba(51,51,51,1);
    margin-bottom: 10rpx;
    display: inline-block;
}
.content .left text:nth-child(2){
    font-size:24rpx;
    color:rgba(153,153,153,1);
}
.content .right {
    color:#333;
}
.content .right text{
    font-size:32rpx;
    font-weight:bold;
    color:#F5100B;
}
.footer{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 98rpx;
    font-size:32rpx;
    font-weight:bold;
    color:rgba(255,255,255,1);
    background-color: #FE3A2D;
    text-align: center;
    line-height: 88rpx;
    z-index: 100;
}
.sheet-container{
    padding: 0!important;
}
.money-wrap{
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: #fbf8fb;
}
.money-warp-title{
    padding-top: 39rpx;
    font-size:32rpx;
    text-align: center;
    width: 100%;
    font-weight:bold;
    color:rgba(51,51,51,1);
}
.money-warp-container{
    display: flex;
    width: 100%;
    box-sizing: border-box;
    padding: 0rpx 90rpx;
    margin-top: 65rpx;
    margin-bottom: 114rpx;
}
.money-warp-container input{
    width: 452rpx;
    height:85rpx;
    border:1px solid rgba(247,41,35,1);
    border-radius:20rpx 0rpx 0rpx 20rpx;
    padding-left: 33rpx;
    box-sizing: border-box;
    background-color: #fff;
}
.money-warp-container view{
    width:114rpx;
    height:87rpx;
    background:rgba(247,41,35,1);
    border-radius:0px 20rpx 20rpx 0px;
    text-align: center;
    line-height: 85rpx;
    font-size:32rpx;
    color:rgba(255,255,255,1);
}
.money-wrap .confirm{
    width: 100%;
    height: 98rpx;
    font-size:32rpx;
    font-weight:bold;
    color:#333;
    background-color: #fff;
    text-align: center;
    line-height: 88rpx;
    letter-spacing: 25rpx;
}