.addressList{
    width: 100%;
}
.addressList .li{
    width: 100%;
    box-sizing: border-box;
    padding: 22rpx 28rpx;
    border-bottom: 1px solid #696969;
}
.addressList .name{
    font-size:30rpx;
    font-weight:bold;
    color:rgba(0,0,0,1);
}
.addressList .name text{
    margin-right: 30rpx;
}
.addressList .address{
    display: block;
    font-size:26rpx;
    color:rgba(105,105,105,1);
    margin-top: 10rpx;
    margin-bottom: 20rpx;
}
.addressList .btnBos{
    display: flex;
    justify-content: space-between;
}
.addressList .moren{
    display: flex;
    align-items: center;
}
.addressList .moren text:nth-child(1){
    width:25rpx;
    height:25rpx;
    background:rgba(255,255,255,1);
    border:1px solid rgba(105,105,105,1);
    border-radius:50%;
    margin-right: 12rpx;
}
.addressList .moren text:nth-child(1).on{
    background:#00C300;
    border:1px solid #00C300;
}
.addressList .moren text:nth-child(2){
    font-size:26rpx;
    color:rgba(105,105,105,1);
}
.addressList .btn,.addressList .btn > view{
    display: flex;
    align-items: center;
}
.addressList .btn > view{
    margin-left:35rpx;
}
.addressList .btn > view > image{
    width: 25rpx;
    margin-right: 10rpx;
}
.addressList .btn > view > text{
    font-size:26rpx;
    color:rgba(105,105,105,1);
}






.no-wrap text{
    font-size:21rpx!important;
    color:rgba(0,0,0,1);
    margin-top: 10rpx!important;
}
.addbox{
    position: fixed;
    bottom: 40rpx;
    left: 70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width:266rpx;
    height:70rpx;
    background:rgba(240,0,0,1);
    border-radius:35rpx;
    font-size:27rpx;
    color:rgba(255,255,255,1);
}
.weixinadd{
    position: fixed;
    bottom: 40rpx;
    right: 70rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width:266rpx;
    height:70rpx;
    background:rgba(21,191,0,1);
    border-radius:35rpx;
    font-size:27rpx;
    color:rgba(255,255,255,1);
}
.addbox image{
    width: 30rpx;
}
.addbox view, .weixinadd view{
    margin-left: 20rpx;
}