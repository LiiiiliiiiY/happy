page{
    display: flex;
    align-items: center;
    flex-direction: column;
    height: 100%;
}
.container{
    background-color: #F9F9F9;
    width: 100%;
    height: 100%;
    display: flex;
}
.scroll-main{
    display: flex;
    height: 100%;
	transform: translateZ(0);
}
.first{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    width: 100%;
    background-color: #fff;
    padding: 47rpx 0 42rpx;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    box-sizing: border-box;
}
.first > text:nth-child(1){
    font-size:25rpx;
    color:rgba(0,0,0,1);
}
.first > text:nth-child(2){
    font-size:71rpx;
    font-weight:bold;
    color:rgba(0,0,0,1);
    margin-top: 30rpx;
    margin-bottom: 10rpx;
}
.first > text:nth-child(3){
    font-size:23rpx;
    color:rgba(120,120,120,1);
}
.first > view:nth-child(4){
    display: flex;
    align-items: center;
    font-size:23rpx;
    color:rgba(120,120,120,1);
}
.first > view:nth-child(4) image{
    width: 30rpx;
    margin-left: 10rpx;
}
.first .view{
    width:222rpx;
    height:54rpx;
    text-align: center;
    margin-top: 50rpx;
    line-height:54rpx;
    box-sizing: border-box;
    background:#f00000;
    border-radius:10rpx;
    font-size:32rpx;
    color:rgba(255,255,255,1);
}
.second{
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    background-color: #fff;
    width: 100%;
    max-height: 100%;
    padding-top: 20rpx;
}
.second > text:nth-child(1){
    display: block;
    width: 100%;
    padding-left: 37rpx;
    box-sizing: border-box;
    font-size:30rpx;
    color:rgba(0,0,0,1);
}
.second .list{
    width: 100%;
    padding: 30rpx 45rpx 0rpx 34rpx;
    box-sizing: border-box;
}
.second .list > .inner{
    display: flex;
    align-items: center;
    width: 100%;
    border-bottom: 1px solid #ddd;
    padding-bottom: 50rpx;
}
.second .list > .inner view{
    display: flex;
    flex-direction: column;
    font-size:21rpx;
    color:rgba(63,63,63,1);
    margin-left: 15rpx;
    margin-right: 139rpx;
}
.second .list > .inner view text:nth-child(1){
    margin-bottom: 5rpx;
}
.second text.no{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 90rpx;
    font-size:23rpx;
    color:rgba(0,0,0,1);
}
.second .list image{
    width: 58rpx;
}
.second .list > view{
    /* display: flex;
    flex-direction: column;
    font-size:21rpx;
    color:rgba(63,63,63,1);
    margin-left: 15rpx;
    margin-right: 160rpx; */
}
.second .list .price{
    font-size:34rpx;
    font-weight:bold;
    color:rgba(240,0,0,1);
}

.wenhaodialog .weui-dialog{
    position: relative!important;
    width:390rpx!important;
    height:519rpx!important;
    background:rgba(255,255,255,1)!important;
}
.wenhaodialog view:nth-child(1),.wenhaodialog view:nth-child(3){
    font-size:28rpx;
    color:rgba(0,0,0,1);
    margin-bottom: 24rpx;
}
.wenhaodialog view:nth-child(2),.wenhaodialog view:nth-child(4){
    font-size:20rpx;
    color:rgba(120,120,120,1);
    margin-bottom: 60rpx;
}
.weui-dialog__bd{
    padding: 52rpx 20rpx 0!important;
}
.weui-dialog__bd > view{
    width: 100%;
    text-align: left;
    line-height:29rpx;
}
.weui-dialog__bd > image{
    position: absolute;
    top: 18rpx;
    right: 18rpx;
    width: 18rpx;
}
.weui-dialog__hd,.weui-dialog__ft{
    display: none!important;
}