page{
    display: flex;
    align-items: center;
    flex-direction: column;
    height: 100%;
}
.scroll-main{
    display: flex;
    height: 100%;
	transform: translateZ(0);
}
.container{
    background-color: #F9F9F9;
    width: 100%;
    height: 100%;
    display: flex;
}
.first{
    display: flex;
    flex-direction: column;
    width: 100%;
    background-color: #FA0000;
}
.first > view:nth-child(1){
    height: 114rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-bottom: 1px solid #fff;
    padding-top: 10rpx;
}
.first text:nth-child(1){
    font-size:48rpx;
    font-weight:bold;
    color:rgba(255,254,254,1);
}
.first text:nth-child(2){
    font-size:21rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
}
.first > view:nth-child(2){
    height: 124rpx;
    width: 100%;
    display: flex;
}
.first > view:nth-child(2) view{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 49.5%;
    padding-top: 10rpx;
}
.first > view:nth-child(2) view:nth-child(1){
    border-right: 1px solid #fff;
}
.second{
    display: flex;
    flex-direction: column;
    width: 100%;
    max-height: 100%;
    margin-top: 28rpx;
    background-color: #fff;
}
.second > view:nth-child(1){
    text-align: center;
    padding-top: 27rpx;
    padding-bottom: 26rpx;
    width: 100%;
    font-size:25rpx;
    font-weight:bold;
    color:rgba(0,0,0,1);
}
.second .list{
    display: flex;
    padding:0rpx 30rpx 40rpx; 
    box-sizing: border-box;
    width: 100%;
}
.second .content{
    padding-top: 40rpx;
    display: flex;
    width: 100%;
    border-top: 1px solid #ddd;
}
.second .content image{
    width: 154rpx;
    margin-right: 30rpx;
}
.second .content > view{
    display: flex;
    flex-direction: column;
}
.second .content > view text:nth-child(1){
    font-size:31rpx;
    font-weight:bold;
    color:rgba(0,0,0,1);
}
.second .content > view text:nth-child(2){
    font-size:26rpx;
    color:rgba(160,160,160,1);
    margin-top: 10rpx;
}
.no{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 90rpx;
    /* padding-bottom: 40rpx; */
    font-size:23rpx;
    color:rgba(0,0,0,1);
}