page{
    display: flex;
    align-items: center;
    flex-direction: column;
    height: 100%;
}
.container{
    background-color: #F9F9F9;
    width: 100%;
    height: 100%;
    display: flex;
}
.scroll-main{
    display: flex;
    height: 100%;
	transform: translateZ(0);
}
.first{
    width: 100%;
    background-color: #FA0000;
}
.first > view:nth-child(1){
    height: 114rpx;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-bottom: 1px solid #fff;
    padding-top: 10rpx;
}
.first text:nth-child(1){
    font-size:48rpx;
    font-weight:bold;
    color:rgba(255,254,254,1);
}
.first text:nth-child(2){
    font-size:21rpx;
    font-weight:400;
    color:rgba(255,255,255,1);
}
.first > view:nth-child(2){
    height: 124rpx;
    width: 100%;
    display: flex;
}
.first > view:nth-child(2) view{
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 49.5%;
    padding-top: 10rpx;
}
.first > view:nth-child(2) view:nth-child(1){
    border-right: 1px solid #fff;
}
.second{
    display: flex;
    flex-direction: column;
    background-color: #fff;
    width: 100%;
    max-height: 100%;
    padding-top: 20rpx;
    /* padding: 20rpx 45rpx 0rpx 30rpx; */
    box-sizing: border-box;
    margin-top: 22rpx;
}
.second > text:nth-child(1){
    display: block;
    width: 100%;
    text-align: center;
    margin-bottom: 6rpx;
    font-size:25rpx;
    font-weight:bold;
    color:rgba(0,0,0,1);
}
.second .list{
    width: 100%;
    padding: 40rpx 45rpx 0rpx 30rpx;
    box-sizing: border-box;
}
.second .list > .inner{
    display: flex;
    align-items: center;
    width: 100%;
    border-bottom: 1px solid #ddd;
    padding-bottom: 50rpx;
}
.second .list > .inner view{
    display: flex;
    flex-direction: column;
    font-size:21rpx;
    color:rgba(63,63,63,1);
    margin-left: 15rpx;
    margin-right: 139rpx;
}
.second .list > .inner view text:nth-child(1){
    margin-bottom: 5rpx;
}
.second text.no{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 90rpx;
    font-size:23rpx;
    color:rgba(0,0,0,1);
}
.second .list image{
    width: 58rpx;
}
