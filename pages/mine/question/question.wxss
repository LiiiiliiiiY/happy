page {
	background-color: #f9f9f9;
}
.container{
    background-color: #f9f9f9;
    padding-bottom: 160rpx;
}
.container .title > view{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.container .title{
    width: 100%;
    box-sizing: border-box;
    padding: 23rpx 20rpx;
    background: #fff;
    border-bottom: 1px solid #ddd;
}
.container .title text{
    font-size:25rpx;
    color:rgba(0,0,0,1);
}
.container .title image{
    width: 34rpx;
    transform: rotate(180deg);
    transition: .3s all;
}
.container .title image.on{
    transform: rotate(270deg);
}
.container .title .content{
    margin-top: 27rpx;
    font-size:22rpx;
    color:rgba(0,0,0,1);
    line-height:31rpx;
}
.connect{
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 10;
    width: 100%!important;
    border-radius: 0!important;
    padding: 0!important;
    height: 101rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size:35rpx;
    color:rgba(255,255,255,1);
    background: #FF0000;
}
.connect image{
    width: 46rpx;
    margin-right: 13rpx;
}
.connect text{
    margin-top: -5rpx;
    font-size:35rpx;
    font-weight:400!important;
    color:rgba(255,255,255,1);
}