/* pages/mine/my-balance.wxss */
page {
    display: flex;
    align-items: center;
    flex-direction: column;
    height: 100%;
}
.container{
    /* position: fixed;
    top: 160rpx;
    left:0;
    bottom: 0;
    right: 0;
    z-index: -1; */
    background-color: #F9F9F9;
    width: 100%;
    height: 100%;
    display: flex;
}
.first{
    width: 100%;
    min-height:228rpx;
    background:rgba(255,255,255,1);
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 27rpx 0 19rpx;
    padding: 0 141rpx 0 91rpx;
    box-sizing: border-box;
}
.first view:nth-child(1){
    display: flex;
    align-items: center;
    flex-direction: column;
    /* margin: 0 0rpx 0 94rpx; */
}
.first view:nth-child(1) text:nth-child(1){
    font-size:30rpx;
    color:rgba(0,0,0,1);
}
.first view:nth-child(1) text:nth-child(2){
    font-size:61rpx;
    font-weight:bold;
    color:rgba(0,0,0,1);
}
.first .btn{
    width: 173rpx;
    height: 53rpx;
    text-align: center;
    line-height: 53rpx;
    font-size:30rpx;
    color:rgba(255,255,255,1);
    background-color: #F00000;
    border-radius: 30rpx;
}
.second{
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    width: 100%;
    max-height: 100%;
    background:#fff;
}
.main{
    display: flex;
    height: 100%;
	transform: translateZ(0);
}
.second .no{
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 30rpx;
    font-size:23rpx;
    color:rgba(0,0,0,1);
}
.second > text:nth-child(1){
    display: flex;
    padding: 26rpx 0rpx 0rpx;
    font-size:30rpx;
    margin-left: 36rpx;
    margin-bottom: 60rpx;
    color:rgba(0,0,0,1);
}
.second > text:nth-child(3){
    display: flex;
    width: 100%;
    text-align: center;
    margin-top: 30rpx;
    font-size:27rpx;
    color:rgba(0,0,0,1);
}
.second .list{
    display: flex;
    align-items: center;
    justify-content: space-between;
    width:100%;
    padding: 0 36rpx 30rpx;
    box-sizing: border-box;
}
.second .list > image{
width: 58rpx;
}
.second .content{
    display: flex;
    flex-direction: column;
    width: 575rpx;
    padding-bottom: 16rpx;
    border-bottom: 1rpx solid #d9d9d9;
}
.second .content >text:nth-child(1){
    font-size:34rpx;
    font-weight:bold;
    color:rgba(0,0,0,1);
}
.second .content >text:nth-child(3){
    font-size:27rpx;
    color:#3F3F3F;
}
.second .content > view{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.second .content > view text:nth-child(1){
    font-size:27rpx;
    color:#3F3F3F;
}
.second .content > view text:nth-child(2){
    font-size:34rpx;
    font-family:Source Han Sans CN;
    font-weight:bold;
    color:rgba(240,0,0,1);
}