page {
	font-size: 28rpx;
	color: #333333;
}
.banner {
	position: relative;
}
.banner image {
	display: block;
	width: 100%;
}
.banner .text {
	display: flex;
	align-items: center;
	position: absolute;
	left: 0;
	top: 0;
	width: 100%;
	height: 100%;
	font-weight: bold;
	color: #FFFFFF;
}
.banner .text .text-left {
	width: 80rpx;
	font-size: 38rpx;
	margin: 0 83rpx 0 28rpx;
}
.banner .text .text-right {
	display: flex;
	flex-direction: column;
	justify-content: center;
	font-size: 32rpx;
}
.banner .text .text-right text:nth-child(1) {
	font-size: 26rpx;
	margin-bottom: 15rpx;
}
.banner2 {
	margin-top: 5rpx;
}
.product-img {
	position: relative;
	width: 100%;
}
.share {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	position: absolute;
	right: 20rpx;
	top: 32rpx;
	z-index: 10;
	color: #FFFFFF;
	font-size: 20rpx;
	width: 112rpx;
	height: 112rpx;
	border-radius: 10rpx;
	background-color: #EC1314;
}
.share image {
	display: block;
	width: 37rpx;
}
.share text:nth-child(2) {
	margin: 5rpx 0;
}
.product-img swiper {
	width: 100%;
	height: 760rpx;
}
.product-img swiper image {
	display: block;
	width: 100%;
	height: 760rpx;
}
.product-img .price {
	position: absolute;
	left: 0;
	bottom: -1rpx;
	font-size: 24rpx;
	color: #FFFFFF;
}
.product-img .price image {
	display: block;
	width: 326rpx;
}
.product-img .price .price-box {
	display: flex;
	align-items: flex-end;
	position: relative;
	position: absolute;
	left: 0;
	top: 50%;
	transform: translateY(-50%);
	z-index: 0;
	z-index: 1;
	font-weight: bold;
}
.product-img .price .price-box .new {
	margin-right: 5rpx;
	font-size: 40rpx;
}
.product-img .price .price-box .new text:nth-child(2) {
	font-size: 64rpx;
}
.product-img .price .price-box .origin {
	line-height: 50rpx;
	text-decoration: line-through;
}
.product-infor {
	padding: 30rpx 20rpx;
	border-bottom: 13rpx solid #F9F9F9;
	box-sizing: border-box;
}
.name {
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.name view:nth-child(1) {
	width: 440rpx;
	line-height: 35rpx;
	font-size: 28rpx;
	font-weight: bold;
	color: #3F3F3F;
}
.name view:nth-child(2) {
	position: relative;
	padding: 10rpx 11rpx 10rpx 30rpx;
	border-radius: 25rpx;
	font-size: 26rpx;
	font-weight: bold;
	color: #FFFFFF;
	background-color: #FD0000;
}
.name view:nth-child(2) image {
	position: absolute;
	left: -30rpx;
	bottom: 0;
	width: 59rpx;
}
.num {
	margin: 20rpx 0;
	font-size: 28rpx;
	font-weight: bold;
	color: #EC1314;
}
.track {
	display: flex;
	flex-wrap: wrap;
	align-items: center;
}
.track text {
	position: relative;
	margin-right: 37rpx;
	margin-bottom: 15rpx;
	padding-left: 20rpx;
	font-size: 25rpx;
	color: #ADACAC;
}
.track text:before {
	content: '';
	display: block;
	position: absolute;
	left: 0rpx;
	top: 50%;
	width: 11rpx;
	height: 11rpx;
	border-radius: 50%;
	background-color: #ADACAC;
	transform: translateY(-50%);
}
.track text:last-child {
	text-decoration: underline;
}
.sign {
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 26rpx;
	color: #8D8B8B;
}
.sign > text {
	font-weight: bold;
}
.sign .sign-text {
	text-decoration: underline;
}
.detail {
	padding-bottom: 112rpx;
}
.detail-title {
	display: flex;
	align-items: center;
	height: 73rpx;
	padding-left: 50rpx;
	font-size: 34rpx;
}
.detail-title text {
	position: relative;
	font-weight: bold;
	color: #4D4C4C;
}
.detail-title text::before {
	content: '';
	position: absolute;
	left: -30rpx;
	top: 50%;
	transform: translateY(-50%);
	width: 18rpx;
	height: 38rpx;
	border-radius: 8rpx;
	background-color: #EC1314;
}
.rich-content {
	width: 100%!important;
	max-width: 100%;
}
.detail-img {
	display: block;
	width: 100%;
	height: auto;
}
.rich-content .detail-p {
	box-sizing: border-box;
}
.rich-content .detail-span {
	font-size: 26rpx;
}

.btn-list {
	display: flex;
	align-items: center;
	justify-content: space-between;
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 112rpx;
	background: #ffffff;
}
.btn-list .contact {
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 122rpx;
	padding: 0;
	border-radius: 0;
	font-size: 22rpx;
	color: #919090;
	background-color: #FFFFFF;
}
.btn-list .contact image {
	width: 65rpx;
}
.btn-right {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100%;
	width: 628rpx;
}
.buy-now, .add, .add-col {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	flex: 1;
	height: 100%;
	font-size: 28rpx;
	color: #FFFFFF;
	background-color: #C7C7C7;
}
.add {
	background-color: #FD0000;
}
.add-col {
	background-color: #FFA4A4;
}
.track-dialog .weui-dialog {
	width: 450rpx;
}
.track-dialog .weui-dialog__hd {
	padding: 0;
}
.track-dialog .weui-dialog__bd {
	padding: 0 32rpx;
	margin: 0;
}
.track-dialog .weui-dialog__ft {
	min-height: 0;
	height: 0;
	line-height: 0;
}
.track-dialog .text1 {
	padding: 40rpx 0;
	color: #000000;
	font-size: 28rpx;
	font-weight: 500;
}
.track-dialog .text2 {
	margin-bottom: 90rpx;
	font-size: 24rpx;
	line-height: 36rpx;
	text-align: left;
	color: #787878;
}
.track-dialog image {
	width: 54rpx;
	margin-bottom: 40rpx;
}
.share-title {
	padding: 20rpx 0;
	text-align: center;
	color: #000000;
	font-size: 30rpx;
	font-weight: bold;
}
.share-container {
	display: flex;
	align-items: center;
	justify-content: space-around;
}
.share-item {
	width: 110rpx!important;
	padding: 0;
	margin: 0!important;
	
	text-align: center;
	color: #000000;
	font-size: 23rpx;
	font-weight: 500;
	padding-bottom: 45rpx;
	background-color: rgba(0,0,0,0);
}
.share-item image {
	width: 88rpx;
	margin-bottom: 10rpx;
}
.ad {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 100;
	background-color: rgba(0, 0, 0, 0.75);
}
.ad-container {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}
.get-infor {
	width: 750rpx!important;
	padding: 0;
	margin: 0;
	background-color: rgba(0,0,0,0);
}
.ad-container .ad-img {
	width: 483rpx;
}
.ad-container .close {
	position: absolute;
	right: 20rpx;
	top: 20rpx;
	width: 37rpx;
	transform: translateX(-50%);
}
.ad-container .share-poster {
	position: absolute;
	left: 50%;
	bottom: -80rpx;
	width: 200rpx;
	height: 60rpx;
	border-radius: 15rpx;
	transform: translateX(-50%);
	background-color: #FFFFFF;
	color: #FD0000;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: 500;
}
.login {
	position: fixed;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	z-index: 100;
	background-color: rgba(0, 0, 0, 0.75);
}
.login-container {
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate(-50%, -50%);
}
.get-infor {
	width: 750rpx!important;
	padding: 0;
	margin: 0;
	background-color: rgba(0,0,0,0);
}
.login-container .ad-img {
	width: 750rpx;
}
.login-container .close {
	position: absolute;
	left: 50%;
	bottom: -90rpx;
	width: 110rpx;
	transform: translateX(-50%);
}